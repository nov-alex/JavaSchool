<configuration>
    # Console appender
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            # Pattern of log message for console appender
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</Pattern>
        </layout>
    </appender>

    <root level="ERROR">
        <appender-ref ref="stdout"/>
    </root>

    <logger name="sbp.school.kafka.service.BaseProducer" level="TRACE"/>
    <logger name="sbp.school.kafka.service.BaseConsumer" level="TRACE"/>
    <logger name="sbp.school.kafka.service.AckConsumerService" level="TRACE"/>
    <logger name="sbp.school.kafka.service.AckProducerService" level="TRACE"/>

</configuration>